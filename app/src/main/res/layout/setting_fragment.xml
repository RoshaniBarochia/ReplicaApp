<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:id="@+id/settingToolbar"
        android:gravity="center_vertical"
        android:background="@color/purple_500"
        android:layout_height="@dimen/_40sdp">
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:id="@+id/imgImage"
            android:src="@drawable/ic_arrow_back_24"
            app:tint="@color/black"
            android:padding="@dimen/_5sdp"
            android:contentDescription="@string/temp_null"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black_lite"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/cera_pro_medium"
            android:layout_marginStart="@dimen/_5sdp"
            android:text="@string/setting"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
             />


    </LinearLayout>


    <LinearLayout
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/settingToolbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/btnLogOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/black_lite"
        android:textSize="@dimen/_12ssp"
        android:gravity="start"
        android:fontFamily="@font/cera_pro_medium"
        android:layout_marginStart="@dimen/_5sdp"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="@string/change_pin"
        android:paddingStart="@dimen/_15sdp"
        android:paddingEnd="@dimen/_15sdp"
        android:clickable="true"
        android:focusable="true"
        android:drawablePadding="@dimen/_15sdp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:drawableStartCompat="@drawable/ic_dot" />

    <View
        android:id="@+id/indicatorView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/gray_disable_text"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@+id/btnHome"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:paddingStart="@dimen/_15sdp"
        android:paddingEnd="@dimen/_15sdp"
        android:drawablePadding="@dimen/_15sdp"
        android:id="@+id/btnSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/black_lite"
        android:textSize="@dimen/_12ssp"
        android:gravity="start"
        android:fontFamily="@font/cera_pro_medium"
        android:layout_marginStart="@dimen/_5sdp"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="@string/my_printer"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:drawableStartCompat="@drawable/ic_pinter" />

    <View
        android:id="@+id/indicatorView1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/gray_disable_text"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@+id/btnHome"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>