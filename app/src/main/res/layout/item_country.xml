<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/_5ssp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/temp_null"
            android:id="@+id/ivFlag"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/flag_ind" />

        <TextView
            app:layout_constraintTop_toTopOf="@id/ivFlag"
            app:layout_constraintBottom_toBottomOf="@id/ivFlag"
            app:layout_constraintStart_toEndOf="@id/ivFlag"            android:contentDescription="@string/temp_null"
            android:id="@+id/tvCountryName"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/country_name"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

</androidx.constraintlayout.widget.ConstraintLayout>