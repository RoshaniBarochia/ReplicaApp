<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <data>

        </data>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

                <ImageView
                    android:contentDescription="@string/temp_null"
                    android:id="@+id/imgArrow"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:src="@drawable/ic_line"
                    android:scaleType="fitXY"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:layout_marginTop="@dimen/_5ssp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/imgArrow"
                    android:id="@+id/tvTitle"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@android:color/black" />

                <TextView
                    app:layout_constraintTop_toBottomOf="@id/tvTitle"
                    app:layout_constraintStart_toEndOf="@id/imgArrow"
                    android:id="@+id/tvDesc"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10ssp"
                    android:text="@string/msisdn1"
                    android:textStyle="bold"
                    android:textColor="@color/gray_disable_text" />

                <TextView
                    app:layout_constraintTop_toBottomOf="@id/tvTitle"
                    app:layout_constraintStart_toEndOf="@id/tvDesc"
                    android:id="@+id/tvMsi"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@color/gray_disable_text" />

                <TextView
                    app:layout_constraintTop_toBottomOf="@id/tvDesc"
                    app:layout_constraintStart_toEndOf="@id/imgArrow"
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/current_balance1"
                    android:textStyle="bold"
                    android:textSize="@dimen/_10ssp"
                    android:layout_marginStart="@dimen/_10ssp"
                    android:textColor="@color/gray_disable_text" />

                <TextView
                    app:layout_constraintTop_toBottomOf="@id/tvMsi"
                    app:layout_constraintStart_toEndOf="@id/tvDate"
                    android:id="@+id/tvCurrent"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@color/gray_disable_text" />
                <ImageView
                    android:contentDescription="@string/temp_null"
                    android:id="@+id/imgArrowHei"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:src="@drawable/ic_arrow_hierarchy"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />



        </androidx.constraintlayout.widget.ConstraintLayout>
</layout>